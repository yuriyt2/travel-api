<%=form_for @destination do |f|%>
<%=f.label ("Name:")%>
<%=f.text_field :name%><br><br>
<%=f.label ("Description:")%>
<%=f.text_area :description,rows: "6" %><br><br>
<%=f.label ("Image URL:")%>
<%=f.text_area :img_url,rows: "4" %><br><br>
<%=f.label ("Latitude:")%>
<%=f.number_field :latitude, step: :any %><br><br>
<%=f.label ("Longitude:")%>
<%=f.number_field :longitude, step: :any%><br><br>
<%=f.label ("You sure?")%>
<input id="check-box" type="checkbox" name="" value=""><br><br>
<%=f.submit "Submit", class: :submit%>
<%end%>
 <script type="text/javascript">
    $(".submit").prop("disabled",true);
    $("#check-box").change(function(){
      if ($("#check-box").is(':checked')) {
        $(".submit").prop("disabled",false);
      }else{
        $(".submit").prop("disabled",true);
      }
    })
 </script>
